<section class="appraisal-results-section">
  <div class="appraisal-results-container">
    
    <!-- Left column -->
    <div class="results-left">
      <h2>Jewelry Appraisal Results</h2>

      <!-- G Pay button -->
      <div class="gpay-container">
        <button class="gpay-btn" disabled>G Pay</button>
      </div>

      <!-- Contact -->
      <label>Contact</label>
      <input type="text" class="input-field">

      <!-- Delivery -->
      <label>Delivery</label>
      <input type="text" class="input-field">
      <input type="text" class="input-field">
      <input type="text" class="input-field">

      <!-- Payment -->
      <label>Payment</label>
      <p class="helper-text">Morbi dapibus magna eget tempus efficitur.</p>
      <input type="text" class="input-field">

      <!-- Billing Address -->
      <label>Billing Address</label>
      <input type="text" class="input-field">
      <input type="text" class="input-field">

      <!-- Complete Order -->
      <button class="complete-order-btn" disabled>Complete Order</button>
    </div>

    <!-- Right column -->
    <div class="results-right">
      <button class="proceed-recycling-btn" disabled>Proceed to Recycling</button>
    </div>

  </div>
</section>
<style>
/* Main Section */
.appraisal-results-section {
  background-color: #f5f5f5;
  padding: 60px 20px;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* Container */
.appraisal-results-container {
  max-width: 1000px;
  margin: 0 auto;
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
  background-color: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

/* Left Column */
.results-left {
  flex: 1 1 500px;
  padding: 40px;
  background-color: #e6f7ff; /* light blue */
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.results-left h2 {
  text-align: center;
  font-weight: 700;
  margin-bottom: 30px;
  font-size: 1.8rem;
  color: #0073e6; /* darker blue for heading */
}

.results-left label {
  font-weight: 600;
  margin-bottom: 5px;
  display: block;
  color: #333;
}

.input-field {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 14px;
  outline: none;
}

.input-field:focus {
  border-color: #0073e6;
  box-shadow: 0 0 0 2px rgba(0,115,230,0.2);
}

/* Buttons */
button {
  border-radius: 6px;
  font-weight: 600;
  transition: all 0.2s ease;
}

.gpay-btn {
  background-color: #ffa500; /* orange */
  color: #fff;
  border: none;
  padding: 12px 20px;
  font-size: 14px;
  cursor: not-allowed;
  width: 100%;
  margin-bottom: 20px;
}

.complete-order-btn {
  background-color: #28a745; /* green */
  color: #fff;
  padding: 12px;
  width: 100%;
  font-size: 15px;
  cursor: not-allowed;
}

/* Right Column */
.results-right {
  flex: 1 1 300px;
  background-color: #fff3cd; /* light yellow */
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 40px;
}

.proceed-recycling-btn {
  width: 100%;
  background-color: #ffc107; /* amber */
  color: #333;
  border: none;
  padding: 14px 20px;
  font-weight: 600;
  font-size: 14px;
  cursor: not-allowed;
  border-radius: 6px;
}

/* Responsive */
@media (max-width: 768px) {
  .appraisal-results-container {
    flex-direction: column;
  }

  .results-right {
    align-items: center;
  }
}
</style>
